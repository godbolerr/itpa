template header
assesseeType
deductionType
relationShipCode
minAge
maxAge
maxDeduction

package com.work.itpa.rules;

import java.util.List;
import java.math.BigDecimal;

template "AT D Rules"

rule "ATD@{row.rowNumber}"
    when
        $fp : FinPerson( age > @{minAge} , 
						age <= @{maxAge} ,
        		 	relationShipCode == "@{relationShipCode}",
        		 	assesseeType == "@{assesseeType}"  
        		 )        		 
        $result : FinPersonResult( )
    then
    	$result.addDeduction(new Deduction(BigDecimal.valueOf(@{maxDeduction}),"@{deductionType}","80T","@{relationShipCode}  Age: " + $fp.age  ));
        $result.addMessage("80D " + "@{relationShipCode},  Maximum Deduction : " + "@{maxDeduction} for age " + $fp.age + " , Type : " + "@{deductionType}");
end
end template

template "AT D for family members"

rule "ATDFamily@{row.rowNumber}"
    when
        $fp : FinPerson( )
        $fpPerson :  Person   (	
        
        				age > @{minAge} , 
						age <= @{maxAge} ,
        		 		relationShipCode == "@{relationShipCode}"             
        ) from $fp.family 
        $result : FinPersonResult( )
    then
        $result.addDeduction(new Deduction(BigDecimal.valueOf(@{maxDeduction}),"@{deductionType}","80T","@{relationShipCode}  Age: " + $fp.age  ));	
        $result.addMessage("80D family " + "@{relationShipCode},  Maximum Deduction : " + "@{maxDeduction} for age " + $fpPerson.age + " , Type : " + "@{deductionType}");
end
end template

