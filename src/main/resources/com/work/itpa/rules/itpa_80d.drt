template header
age
disabilityPercent
deduction
reason

package com.work.itpa.rules;

template "AT D Rules"

rule "ATD@{row.rowNumber}"
    when
        FinPerson(age == @{age} , disabilityPercent == @{disabilityPercent}  )
        result : FinPersonResult( )
    then
        result.addMessage("@{reason} " + " @{deduction} ");
end
end template
