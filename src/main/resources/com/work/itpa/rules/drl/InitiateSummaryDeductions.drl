package com.work.itpa.rules;

import com.work.itpa.domain.SummaryDeduction;


rule "Initiate Summary Deductions"
	when
		not (SummaryDeduction())
	then
		System.out.println("Summary Objects initiated....");
				
		SummaryDeduction qqbrrb = new SummaryDeduction("80QQB_80RRB");
		qqbrrb.setMaxAmount(new BigDecimal("300000"));
		insert(qqbrrb);
		
		
		SummaryDeduction tta = new SummaryDeduction("80TTA");
		tta.setMaxAmount(new BigDecimal("10000"));
		insert(tta);	
		
		SummaryDeduction gga = new SummaryDeduction("80GGA");
		insert(gga);		
		
		SummaryDeduction ggc = new SummaryDeduction("80GGC");
		insert(ggc);		
		
		SummaryDeduction g = new SummaryDeduction("80G");
		insert(g);			
		
		SummaryDeduction atc = new SummaryDeduction("80C");
		atc.setMaxAmount(new BigDecimal("150000"));
		insert(atc);		
		
end

/**
	Retrieve all summary deductions from working memory
**/

query "Get Summary Deductions"
	$sd : SummaryDeduction()
end


